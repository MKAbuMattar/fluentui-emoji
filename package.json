  "scripts": {
    "fluentui-emoji:clean:clone": "rimraf public-fluentui-emoji",
    "fluentui-emoji:clean:svg": "rimraf svg",
    "fluentui-emoji:clean:icons": "rimraf icons",
    "fluentui-emoji:clean:icons-pkg": "rimraf packages/fluentui-emoji/icons",
    "clean": "pnpm fluentui-emoji:clean:clone && pnpm fluentui-emoji:clean:svg && pnpm fluentui-emoji:clean:icons && pnpm fluentui-emoji:clean:icons-pkg",
    "fluentui-emoji:clone": "pnpm fluentui-emoji:clean:clone && tsx script/git-clone.config.ts",
    "fluentui-emoji:svg": "pnpm fluentui-emoji:clean:svg && tsx script/copy-svg.script.ts",
    "fluentui-emoji:icons": "pnpm fluentui-emoji:clean:icons-pkg && tsx script/copy-icons.script.ts",
    "svg:optmize:flat": "svgo --config svgo.config.cjs -f svg/flat -o icons/flat",
    "svg:optmize:high-contrast": "svgo --config svgo.config.cjs -f svg/high-contrast -o icons/high-contrast",
    "svg:optmize:modern": "svgo --config svgo.config.cjs -f svg/modern -o icons/modern",
    "svg:optmize": "pnpm fluentui-emoji:clean:icons && pnpm svg:optmize:flat && pnpm svg:optmize:high-contrast && pnpm svg:optmize:modern",
    "svg:get-data": "tsx script/build.data.ts",
    "build": "pnpm fluentui-emoji:clone && pnpm fluentui-emoji:svg && pnpm svg:optmize && pnpm svg:get-data && pnpm fluentui-emoji:icons && pnpm fluentui-emoji:clean:clone && pnpm fluentui-emoji:clean:svg && pnpm fluentui-emoji:clean:icons",
    "lint": "biome check ./script",
    "lint:fix": "biome check ./script --fix",
    "fmt": "biome format ./script",
    "fmt:fix": "biome format --write ./script"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/fs-extra": "11.0.4",
    "@types/node": "25.0.3",
    "fs-extra": "11.3.3",
    "recursive-directory": "1.2.3",
    "rimraf": "6.1.2",
    "svgo": "4.0.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "uuid": "13.0.0"
  }
}
